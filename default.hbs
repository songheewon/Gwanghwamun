<!DOCTYPE html>
<html lang="{{ @site.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ meta_title }}</title>

  <link rel="icon" href="{{@site.icon}}">

  {{!-- {{> fonts }} --}}
  {{> compiled/inline-css }}
  {{!-- {{> dark-mode-js }} --}}

  <script>
  let site_url                            = "{{ @site.url }}",
      pagination_next_page_number         = "{{ pagination.next }}",
      pagination_available_pages_number   = "{{ pagination.pages }}",
      pagination_loading_text             = "{{t "Loading" }}",
      pagination_more_posts_text          = "{{t "More Posts" }}",
      clipboard_copied_text               = "{{t "Link copied to clipboard" }}";
  </script>

  <link rel="stylesheet" href="{{asset "public/bluedot.css" hasMinFile="true"}}"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
  {{> css/default }}

  <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
  <script type="text/javascript">
    var bluedot_user_id = {{#if @member}}"{{@member.uuid}}"{{else}}null{{/if}};
  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  {{ ghost_head }}

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-rwdImageMaps/1.6/jquery.rwdImageMaps.min.js"></script>
  <script>
    $(document).ready(function() {
      $('img[usemap]').rwdImageMaps();
    });
  </script>
</head>
<body class="{{ body_class }}">
<div class="viewport">
  {{> header }}

  <main class="main">
    {{{body}}}
  </main>

  <footer class="footer">
    {{#if @site.use_footer}}
    {{> footer}}
    {{/if}}

    <div class="container mx-auto">
      {{ bluedot_footer }}
    </div>
  </footer>
</div>

<script src="{{ asset 'js/app.min.js' }}"></script>

{{{block "scripts"}}}

{{ ghost_foot }}
</body>
</html>