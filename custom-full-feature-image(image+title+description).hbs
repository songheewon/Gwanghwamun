{{!< default}} {{#post}} {{#if feature_image}} <div class="c-post-image-header-template">
    <div class="c-post-image-header-template__wrap">
        <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
            class='c-post-image-header-template__img lazyload' style="width: 100%; height: 100%; object-fit: cover;"
            src="{{img_url feature_image}}"
            />
    </div>
    <div class="c-post-header__title c-post-image-header-template__title_and_excerpt">
        <div class="c-post-image-header-template__title">{{title}}</div>
        <div class="c-post-image-header-template__excerpt">{{excerpt}}</div>
    </div>
    </div>
    {{/if}}<article>
        <header class="bg-gray-f4">
            <div class="container mx-auto max-w-[680px] pt-9 pb-9">
                <div class="flex text-xs font-medium items-center justify-center gap-x-9">
                    {{#primary_author}}
                    <div class="flex items-center gap-x-3">
                        <div class="flex rounded-full overflow-hidden aspect-square w-9 bg-gray-400">
                            <img class="object-cover w-full h-full" src="{{profile_image}}" alt="{{name}}">
                        </div>
                        <a href="{{url}}">{{name}}</a>
                    </div>
                    {{/primary_author}}
                    <div><time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="YYYY년 M월 D일"}}</time></div>

                    {{!-- {{bluedot_comment_button}} --}}

                    {{#if (not @site.comment_read_permission "none")}}
                    {{#if comment_count}}
                    <div><a class="byline-comments" href="{{url}}comments" data-portal="comment"
                            data-post-uuid="{{uuid}}">댓글 {{comment_count}}개 보기</a></div>
                    {{else}}
                    <div><a class="byline-comments" href="{{url}}comments" data-portal="comment"
                            data-post-uuid="{{uuid}}">댓글 남기기</a></div>
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </header>
        <div class="container mx-auto max-w-[680px] py-12">

            {{#if access}}
            <div class="c-{{ post_class }}">
                <div class="c-content">
                    {{ content }}
                </div>
            </div>

            {{#unless @member}}
            {{#if access}}

            <div class="py-9 border-y border-y-black/40 mt-10">
                <div class="flex flex-col gap-x-6 md:flex-row md:items-end">

                    <div class="font-bold mb-5 md:w-48 md:mb-0">
                        <div class="text-bluedot-blue text-2xs mb-2">Newsletter</div>
                        <div class="text-lg tracking-tighter leading-6">디지털 시대, 새로운 정보를 받아보세요!</div>
                    </div>

                    <form class="grow" data-members-form="subscribe">
                        <div class="flex flex-col md:flex-row md:gap-x-3">
                            <label for="homepage-newsletter-form" class="sr-only">Email address</label>
                            <input type="email" name="email"
                                class="text-sm mb-4 border border-gray-b9 rounded-sm !w-[310px] h-[45px] px-4 md:!mb-0"
                                id="homepage-newsletter-form" placeholder="메일주소를 입력하세요." required=""
                                data-members-email="">
                            <div class="grow">
                                <button type="submit" value="Subscribe"
                                    class="bg-black text-white text-sm font-bold rounded-md h-[45px] px-8">구독</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

            {{!--
            <div class='c-subscribe'>
                <div class='o-grid'>
                    <div class='o-grid__col o-grid__col o-grid__col--3-4-m o-grid__col--3-4-l o-grid__col--center'>
                        <div data-icon='ei-envelope' data-size='m' class='c-subscribe__icon'></div>
                        <h3 class='u-type-sm u-type-500 u-color-gray u-mb-32'>{{t 'Become a subscriber to access all of
                            our
                            content.' }}</h3>
                        {{> subscribe-form inputLabel='subscribe-email-post'}}
                    </div>
                </div>
            </div> --}}
            {{/if}}
            {{/unless}}

            {{bluedot_comment_button}}

            {{!-- {{> share }} --}}

            {{!-- If the post is published for members and paid members and the visitor is not one of those, show the
            upgrade box --}}

            {{!-- If the post is published for members and paid members and the visitor is not one of those, show the
            upgrade box --}}
            {{else}}
            <!-- from bluedot -->
            {{bluedot_paywall}}
            {{/if}}

        </div>
    </article>

    {{bluedot_paywall_popup}}

    {{/post}}

{{#if @site.visible_related_post}}
    {{> related-posts}}
{{/if}}
    <div class="border-t border-t-black"></div>
{{#if @site.post_visible_shop_section}}
    {{> post-shop }}
    {{/if}}