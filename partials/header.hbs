            <div class="absolute top-0 right-0 flex items-center gap-x-7 text-xs font-bold">
              {{#if @member}}
              <div style="display: flex;" class="items-center">
                <a href='#' data-portal='account' class="items-center flex"
                  style="justify-content: end; margin-right: 10px;">
                  <span style="margin-right: 10px;">{{t 'Hello'}}, {{@member.name}}</span>
                  <div class="c-header__member--profile" style="overflow: hidden;
    border: 1px solid black;
    border-radius: 100%;">
                    {{#if @member.avatar_image}}
                    <img style="overflow: hidden;
    object-fit: cover;
    width: 100%;
    height: 100%;" src="{{@member.avatar_image}}" alt="">
                    {{else}}
                    <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg"
