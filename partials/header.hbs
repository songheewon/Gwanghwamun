                style="font-size: 24px; font-weight: 700;" href="{{@site.url}}">
                {{#if @site.logo}}
                <img class="w-full h-auto" src="{{@site.logo}}" alt="{{@site.brand_site_title}}" style="transform: scale(0.7)"/>
                {{else}}
